author = {Abascal, Julio and Gardeazabal, Xabier and P\'{e}rez, Juan Eduardo and Valencia, Xabier and Arbelaitz, Olatz and Muguerza, Javier and Yera, Ainhoa},
title = {Personalizing the User Interface for People with Disabilities},
